{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true
  }
}